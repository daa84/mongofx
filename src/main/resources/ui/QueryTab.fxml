<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import org.fxmisc.richtext.CodeArea?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.cell.TreeItemPropertyValueFactory?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="mongoui.ui.main.QueryTabController">
	<top><CodeArea fx:id="codeArea" onKeyReleased="#codeAreaOnKeyReleased"></CodeArea></top>
	<center>
	<TreeTableView  fx:id="queryResultTree" showRoot="false">
		<columnResizePolicy><TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
		<columns>
			<TreeTableColumn text="Key" prefWidth="10" minWidth="5">
				<cellValueFactory>
						<TreeItemPropertyValueFactory property="key" />
					</cellValueFactory>
			</TreeTableColumn>
			<TreeTableColumn text="Value" prefWidth="150">
				<cellValueFactory>
						<TreeItemPropertyValueFactory property="displayValue" />
					</cellValueFactory>
			</TreeTableColumn>
		</columns>
	</TreeTableView>
	</center>
</BorderPane>

