<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TreeView?>
<?import org.fxmisc.richtext.CodeArea?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="mongoui.ui.main.MainFrameController">
	<left>
		<TreeView fx:id="treeView" showRoot="false" onMouseClicked="#treeViewClicked">
			<contextMenu>
				<ContextMenu>
					<items>
						<MenuItem text="Create db" onAction="#onCreateNewDb"></MenuItem>
					</items>
				</ContextMenu>
			</contextMenu>
		</TreeView>
	</left>
	<center>
		<TabPane fx:id="queryTabs"></TabPane>
	</center>
</BorderPane>
